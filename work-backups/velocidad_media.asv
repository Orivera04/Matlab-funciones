% Programa para calcular la velocidad media de varios corredores;
m=input('Deme el valor de los minutos: ');
s=input('Deme el valor de los segundos: ');
while (m~=0 && s~=0)
    t=s+m*60;
    v=(1500/t);
fprintf('El tiempo en segundos es: %6.2f \n',t);
fprintf('La velocidad es: %6.2f \n',v);
  m=input('Deme el valor de los minutos: ');
  s=input('Deme el valor de los segundos: ');
end
